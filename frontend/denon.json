{
    "$schema": "https://deno.land/x/denon@2.3.3/schema.json",
    "watcher": {
        "interval": 300,
        "match": ["*.*", "src/**/*.*"],
        "skip": ["public/*"],
        "legacy": false
    },
    "scripts": {
        "build": {
            "cmd": "denopack -c denopack.config.ts",
            "desc": "bundle my client.tsx file",
            "watch": false
        },
        "start": [
            {
                "cmd": "denon build",
                "desc": "bundle my client.tsx file",
                "watch": false
            },
            {
                "cmd": "deno run main.ts -- --browse serve",
                "desc": "run web server",
                "allow": [
                    "env",
                    "net",
                    "read",
                    "run"
                ],
                "watch": true,
                "unstable": true
            }
        ],
        "cache": "deno cache src/deps/*.ts"
    }
  }
