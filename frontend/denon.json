{
    "$schema": "https://deno.land/x/denon@2.3.3/schema.json",
    "watcher": {
        "interval": 300,
        "match": ["*.*", "src/**/*.*"],
        "skip": ["public/*"],
        "legacy": false
    },
    "scripts": {
        "build": {
            "cmd": "deno run main.ts -- build",
            "desc": "bundle my client.tsx file",
            "watch": false,
            "allow": [
                "env",
                "net",
                "read",
                "run"
            ]
        },
        "start": [
            {
                "cmd": "deno run main.ts -- build",
                "desc": "bundle my client.tsx file",
                "watch": false,
                "allow": [
                    "env",
                    "net",
                    "read",
                    "run"
                ]
            },
            {
                "cmd": "deno run main.ts -- --browse serve",
                "desc": "run web server",
                "allow": [
                    "env",
                    "net",
                    "read",
                    "run"
                ],
                "watch": true,
                "unstable": true
            }
        ],
        "cache": "deno cache src/deps/*.ts"
    }
  }
